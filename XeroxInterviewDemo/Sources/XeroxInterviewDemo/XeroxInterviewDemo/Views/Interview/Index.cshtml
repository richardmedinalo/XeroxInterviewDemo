@model IEnumerable<XeroxInterviewDemo.ViewModels.InterviewViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>


<div id="clientsDb">
   @(Html.Kendo().Grid(Model)
    .Name("Grid")
    .Columns(columns =>
    {
        columns.Bound(p => p.Id).Title("Id");
        columns.Bound(p => p.Date).Title("Date and time").Format("{0:dd/MM/yyyy}");
        columns.Bound(p => p.Title).Title("Title");
        columns.Bound(p => p.Position).Title("Position").Width (100);

    })
    .Pageable()
    .Sortable()
    .Scrollable(scr => scr.Height(200))
    .Filterable()
    .Selectable ()
    .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(30)
        .ServerOperation(false)
     )
)
</div>




